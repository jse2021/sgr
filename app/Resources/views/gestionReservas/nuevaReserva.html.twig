{% extends 'bases/base.html.twig' %}
{% form_theme form 'form/reservaForm.html.twig' %}
{% block titulo %}Gestion Reserva {% endblock %}
{% block contenido %}
  {{ parent() }}
    <h1 class="text-center display-4">Gestion de la Reserva </h1>
      <!doctype html>
      <html lang="en">
              <head>
                  <title>Title</title>
                      <meta charset="utf-8">
                      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
                      <link href="{{asset('vendor/fullcalendar/lib/main.css')}}" rel="stylesheet"/>
                      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
              </head>
          <body>
              <div id="containter">
                  <div class="col-md-8 offset-md-2">
                  <div id="calendario"></div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Reserva</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Recipient:</label>
            <input type="text" class="form-control" id="recipient-name">
          </div>
          <div class="mb-3">
            <label for="message-text" class="col-form-label">Message:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Send message</button>
      </div>
    </div>
  </div>
</div>
              </div>
              {# librerias js #}
             <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
             <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
          </body>
      </html>
{% endblock %}
{# fin de lo que muestro en pantalla #}

{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
<script src="{{asset('vendor/fullcalendar/lib/main.js')}}"></script>
<script src="{{asset('vendor/fullcalendar/lib/locales-all.js')}}"></script>
<script src="{{asset('vendor/jquery/jquery.min.js')}}"></script>

<script>
let elementoEv = [{
    "tittle":"Jeremias Romero",
    "start":"2022-03-30 10:00:00"
}]

document.addEventListener('DOMContentLoaded', function() {
var calendarEl = document.getElementById('calendario');
var calendar = new FullCalendar.Calendar(calendarEl, {
    initialView: 'dayGridMonth',
    locale:"es",
    navLinks: true,
    selectable: true,
    height: "auto",
    contentHeight: "auto",
    selectHelper:true,
    headerToolbar:{
        left:'prev,next,today',
        center:'title',
        right:'dayGridMonth,timeGridWeek,timeGridDay',
        
    },
      
    
    dateClick: function(info) {
      fechaSeleccionada=info.dateStr;
      console.log(fechaSeleccionada);  
      $("#exampleModal").modal("show");  
  },

    events: elementoEv,
    editable: true,
    eventDrop: (infos)=>{
        console.log(infos.event.start);
    }
});
calendar.render();
 
});
</script>
{% endblock %}

 


