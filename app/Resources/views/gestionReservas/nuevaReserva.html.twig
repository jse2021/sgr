{% extends 'base.html.twig' %}

{% form_theme form 'form/reservaForm.html.twig' %}

{% block titulo %}Nueva reserva
{% endblock %}
{% block stylesheet %}
  <link rel="stylesheet" href="{{asset('datepicker/datepicker.css')}}">
{% endblock %}

{% block contenido %}


  <div class="container">
    <h1 class="text-center display-4">Nueva Reserva </h1>
      <div class="row">
      
      <div class="col-md-8">
            
          {{ form_start(form)}}
            {% for message in app.flashes('success')%}
              <div class="alert alert-success">
                  {{message}}
              </div>
            {% for message in app.flashes('warning')%}
              <div class="alert alert-warning">
                {{message}}
              </div>
            {% endfor %}
            {% endfor %}
            
          {{ form_widget (form)}}
          {{ form_end(form)}}
        </div>
      </div>
  </div>
{% endblock %}

{% block javascripts %}
  <script src="{{asset('datepicker/datepicker.js')}}"> </script>

  <script>
  jQuery(document).ready(function(){
      $('.js-datepicker').datepicker();
  });
  </script>
{% endblock %}
